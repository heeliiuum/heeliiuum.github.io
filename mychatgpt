<body>
    <div class="container">
        <label for="model">选择模型:</label>
        <select id="model">
            <option value="gpt-3.5-turbo">gpt-3.5-turbo</option>
            <option value="gpt-4-0613">gpt-4-0613</option>
        </select>
        <label for="prompt">输入问题:</label>
        <input type="text" id="prompt" placeholder="请输入问题...">
        <button onclick="generateResponse()">生成回复</button>
        <div id="result" class="response"></div>
    </div>

    <script>
        function generateResponse() {
            var model = document.getElementById("model").value;
            var prompt = document.getElementById("prompt").value;

            var url = "https://openai.api2d.net/v1/chat/completions";
            var headers = {
                'Content-Type': 'application/json',
                'Authorization': 'Bearer fk223086-yJoAv5P0YNlsu2jsCJqguGTK4Rhxn7nD'
            };
            var data = {
                "model": model,
                "messages": [{"role": "user", "content": prompt}]
            };

            fetch(url, {
                method: 'POST',
                headers: headers,
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(data => {
                var content = data.choices[0].message.content;
                document.getElementById("result").innerHTML = content;
            })
            .catch(error => console.error('Error:', error));
        }
    </script>
</body>
